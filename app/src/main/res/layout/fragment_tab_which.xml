<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Tab_which">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="냉장고 안에 있는 재료들로 무엇을 만들 수 있을까요?"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf = "parent"
            app:layout_constraintBottom_toTopOf="@+id/recipe_recyclerview"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/txt_tab_which"
            >
    </TextView>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_recyclerview"
            app:layout_constraintBottom_toTopOf="@+id/lets_go"
            app:layout_constraintTop_toBottomOf="@+id/txt_tab_which"
            tools:listitem="@layout/recipe_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lets_go"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/recipe_recyclerview"
        app:layout_constraintBottom_toTopOf = "parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장보러 가기"
            android:textStyle="bold" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>