<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.MyRProject"
    tools:context=".SecondActivity">

    <include layout="@layout/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/underline"
        android:padding="15dp"
        tools:context=".category">

        <ImageButton
            android:id="@+id/fruit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/fruit"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/vegetable"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/vegetable"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/vegetable"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/meat"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fruit"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/meat"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/meat"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/fish"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/vegetable"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/fish"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/fish"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/dairy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/meat"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/dairy"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/dairy"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fish"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="과일"
            app:layout_constraintBottom_toTopOf="@+id/drink"
            app:layout_constraintEnd_toEndOf="@+id/fruit"
            app:layout_constraintStart_toStartOf="@+id/fruit"
            app:layout_constraintTop_toBottomOf="@+id/fruit" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="채소"
            app:layout_constraintBottom_toTopOf="@+id/sauce"
            app:layout_constraintEnd_toEndOf="@+id/vegetable"
            app:layout_constraintStart_toStartOf="@+id/vegetable"
            app:layout_constraintTop_toBottomOf="@+id/vegetable" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="정육"
            app:layout_constraintBottom_toTopOf="@+id/rice"
            app:layout_constraintEnd_toEndOf="@+id/meat"
            app:layout_constraintStart_toStartOf="@+id/meat"
            app:layout_constraintTop_toBottomOf="@+id/meat" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="수산물"
            app:layout_constraintBottom_toTopOf="@+id/kimchi"
            app:layout_constraintEnd_toEndOf="@+id/fish"
            app:layout_constraintStart_toStartOf="@+id/fish"
            app:layout_constraintTop_toBottomOf="@+id/fish" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="유제품"
            app:layout_constraintBottom_toTopOf="@+id/user_append"
            app:layout_constraintEnd_toEndOf="@+id/dairy"
            app:layout_constraintStart_toStartOf="@+id/dairy"
            app:layout_constraintTop_toBottomOf="@+id/dairy" />

        <ImageButton
            android:id="@+id/drink"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/drink"
            app:layout_constraintEnd_toStartOf="@+id/sauce"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <ImageButton
            android:id="@+id/sauce"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/sauce"
            app:layout_constraintEnd_toStartOf="@+id/rice"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/drink"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageButton
            android:id="@+id/rice"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/rice"
            app:layout_constraintEnd_toStartOf="@+id/kimchi"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sauce"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <ImageButton
            android:id="@+id/kimchi"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/kimchi"
            app:layout_constraintEnd_toStartOf="@+id/user_append"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/rice"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageButton
            android:id="@+id/user_append"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/user_append"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/kimchi"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="음료"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/drink"
            app:layout_constraintStart_toStartOf="@+id/drink"
            app:layout_constraintTop_toBottomOf="@+id/drink" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="장/소스"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sauce"
            app:layout_constraintStart_toStartOf="@+id/sauce"
            app:layout_constraintTop_toBottomOf="@+id/sauce" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="곡류"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rice"
            app:layout_constraintStart_toStartOf="@+id/rice"
            app:layout_constraintTop_toBottomOf="@+id/rice" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="김치/반찬"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/kimchi"
            app:layout_constraintStart_toStartOf="@+id/kimchi"
            app:layout_constraintTop_toBottomOf="@+id/kimchi" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="기타"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/user_append"
            app:layout_constraintStart_toStartOf="@+id/user_append"
            app:layout_constraintTop_toBottomOf="@+id/user_append" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/listcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"

        >

    </FrameLayout>


</RelativeLayout>